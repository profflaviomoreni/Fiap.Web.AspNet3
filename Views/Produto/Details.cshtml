@model Fiap.Web.AspNet3.Models.ProdutoModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lojas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
    </dl>
    @if (Model.ProdutosLojas is not null || Model.ProdutosLojas.Count > 0)
    {
        <h5>Lojas</h5>
        @foreach (var lojas in Model.ProdutosLojas)
        {
            <p>@lojas.Loja.LojaNome</p>
        }
        <hr />
    }
</div>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>
